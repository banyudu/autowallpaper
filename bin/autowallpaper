#!/usr/bin/env node
'use strict'

const program = require('commander')
const pkg = require('../package.json')
const version = pkg.version

program
  .version(version)
  .usage('<directory>')
  .parse(process.argv)

const dir = program.args[0]
const interval = parseInt(program.args[1], 10) * 1000

require('daemon')()

require('../').run(dir, interval)
